<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Home</title>
  </head>
  <body class="bg-zinc-900 text-white min-h-screen">
    <!-- Navbar -->
    <nav class="bg-zinc-800 fixed top-0 w-full px-6 py-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-xl font-semibold text-blue-400">MyApp</h1>
        <div class="space-x-4">
          <a href="/" class="text-white hover:text-blue-400 transition-colors"
            >Home</a
          >
          <a
            href="/profile"
            class="text-white hover:text-blue-400 transition-colors"
            >Profile</a
          >
          <a
            href="/logout"
            class="text-white hover:text-red-400 transition-colors"
            >Logout</a
          >
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="p-6 pt-20">
      <h2 class="text-3xl text-center font-bold">Welcome to the Dashboard</h2>

      <div class="py-10">
        <h2 class="text-2xl font-semibold mb-4">Your Posts</h2>
        <div class="space-y-6">
          <% if (user.posts.length > 0) { %> <%
          user.posts.slice().reverse().forEach(post => { %>
          <div class="bg-zinc-800 p-4 rounded shadow">
            <h2 class="text-blue-500 font-medium">@<%= user.username %></h2>
            <p class="text-white mt-2"><%= post.content %></p>
            <small><%= post.like.length %> likes</small>
            <div class="mt-4 flex space-x-4 text-sm">
              <a
                href="/like/<%=post._id %>"
                class="text-green-400 hover:underline"
                ><%= post.like.indexOf(user._id) === -1 ? "Like": "Unlike";
                %></a
              >
              <a
                href="/edit/<%=post._id%>"
                class="text-yellow-400 hover:underline"
                >Edit</a
              >
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-gray-400">No posts found.</p>
          <% } %>
        </div>
      </div>
    </main>
  </body>
</html>
