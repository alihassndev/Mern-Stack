<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>All Users</title>
  </head>
  <body class="bg-zinc-900 text-white">
    <!-- Navbar -->
    <nav
      class="bg-zinc-800 w-full fixed top-0 py-4 px-6 flex justify-center gap-10 text-lg font-medium shadow-md"
    >
      <a href="/" class="hover:text-blue-400 transition">Home</a>
      <a href="/read" class="hover:text-blue-400 transition">Read</a>
      <a href="/logout" class="hover:text-blue-400 transition">Logout</a>
    </nav>

    <div class="w-full min-h-screen flex justify-center items-center px-4">
      <div class="w-full max-w-2xl bg-zinc-800 p-8 rounded-lg shadow-2xl">
        <h1 class="text-3xl font-bold text-center mb-8">All Users</h1>

        <% if (users.length > 0) { %>
        <div class="flex flex-col gap-6">
          <% users.forEach(user => { %>
          <div class="bg-zinc-700 rounded-lg p-4 border border-zinc-600">
            <h2 class="text-xl font-semibold"><%= user.username %></h2>
            <p class="text-sm text-gray-300">Email: <%= user.email %></p>
            <p class="text-sm text-gray-300">Age: <%= user.age %></p>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <p class="text-center text-gray-400">No Users Found</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
