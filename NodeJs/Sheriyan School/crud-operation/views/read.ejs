<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Home</title>
  </head>
  <body class="bg-zinc-900 text-white">
    <nav class="h-16 bg-zinc-700 flex justify-center items-center gap-10">
      <a href="/">Home</a>
      <a href="/read">Read</a>
    </nav>
    <div class="w-full min-h-screen p-10">
      <h1 class="text-center text-3xl font-bold">All Users</h1>

      <div class="users w-[70%] mx-auto grid grid-cols-3 gap-6 my-10">
        <% if(users.length>0) { %> <% users.forEach(user => { %>
        <div class="user bg-zinc-700 p-8 rounded-lg">
          <div
            class="w-full h-48 mx-auto rounded-lg overflow-hidden flex justify-center items-center"
          >
            <img
              class="w-40 h-40 object-cover object-center rounded-md shadow-md"
              src="<%= user.imageURL %>"
              alt="<%= user.username %>"
            />
          </div>

          <h3 class="text-xl mt-3 font-medium"><%= user.username %></h3>
          <h5 class="text-zinc-400"><%= user.email %></h5>

          <div class="btns flex justify-between items-center mt-4">
            <a
              class="bg-blue-500 hover:bg-blue-400 rounded-lg py-2 px-5"
              href="/edit/<%= user.username %>"
              >Edit User</a
            >
            <a
              class="bg-red-500 hover:bg-red-400 rounded-lg py-2 px-5"
              href="/delete/<%= user.username %>"
              >Delete User</a
            >
          </div>
        </div>
        <% }) %> <% } %>
      </div>
    </div>
  </body>
</html>
