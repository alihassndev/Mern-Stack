<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Home</title>
  </head>
  <body class="bg-zinc-900 text-white overflow-x-hidden">
    <div class="main w-[80%] min-h-screen p-10 mx-auto">
      <h1 class="text-4xl font-bold text-center">NoteBook</h1>

      <div class="flex flex-col mt-10">
        <form action="/create" method="post">
          <input
            type="text"
            class="block w-full bg-zinc-700 py-2 px-3 rounded-lg"
            placeholder="Enter Title"
            name="title"
          />
          <textarea
            class="block w-full bg-zinc-700 my-4 py-2 px-3 rounded-lg resize-none"
            placeholder="Enter description"
            name="description"
          ></textarea>

          <div class="w-full flex justify-center">
            <input
              type="submit"
              class="py-3 px-16 bg-blue-700 rounded-lg hover:bg-blue-600 cursor-pointer"
              value="Create Task"
            />
          </div>
        </form>
      </div>

      <div class="tasks flex gap-8 w-full my-10">
        <% if (files.length > 0) { %> <% files.forEach(file => { %>
        <div class="task w-80 p-5 rounded-lg bg-zinc-700">
          <h2 class="text-xl font-bold"><%= file %></h2>
          <div class="flex w-full justify-between mt-5">
            <a href="/files/<%=file%>" class="text-blue-400">View More.</a>
            <a href="" class="text-blue-400">Edit</a>
          </div>
        </div>
        <% }); %> <% } else { %>
        <h2 class="text-zinc-400">No tasks found</h2>
        <% } %>
      </div>
    </div>
  </body>
</html>
